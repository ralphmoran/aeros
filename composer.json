{
    "name": "aero-admin/v1.0",
    "type": "project",
    "autoload":{
        "files":[
            "lib/functions/all.php"
        ],
        "psr-4": {
            "Classes\\": "lib/classes",
            "Interfaces\\": "lib/interfaces",
            "Traits\\": "lib/traits",
            "Controllers\\": "controllers",
            "Models\\": "models",
            "Middlewares\\": "middlewares",
            "Providers\\": "providers",
            "Events\\": "events",
            "Crons\\": "queues/crons",
            "Jobs\\": "queues/jobs",
            "Workers\\": "queues/workers"
        }
    },
    "require": {
        "php": "^8.0",
        "vlucas/phpdotenv": "^5.4",
        "aws/aws-sdk-php": "^3.211",
        "firebase/php-jwt": "^6.1",
        "sendgrid/sendgrid": "~7",
        "twilio/sdk": "^6.36",
        "composer/ca-bundle": "^1.3",
        "predis/predis": "^2.0",
        "sentry/sdk": "^3.2",
        "robmorgan/phinx": "^0.13.4",
        "fzaninotto/faker": "^1.5",
        "pda/pheanstalk": "^4.0"
    },
    "require-dev": {
        "robmorgan/phinx": "^0.13.4"
    },
    "license": "Property",
    "minimum-stability": "alpha",
    "scripts": {
        "update-workers": "vagrant ssh -c 'sudo cp -r /var/www/html/scripts/supervisor/*.conf /etc/supervisor/conf.d/'",
        "start-workers": "vagrant ssh -c 'sudo supervisorctl start all'",
        "stop-workers": "vagrant ssh -c 'sudo supervisorctl stop all'",
        "status-workers": "vagrant ssh -c 'sudo supervisorctl status'",
        "refresh-workers": "vagrant ssh -c 'sudo supervisorctl stop all && sudo supervisorctl reread && sudo supervisorctl update && sudo supervisorctl start all'"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
