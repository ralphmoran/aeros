{
    "name": "aero-admin/v1.0",
    "type": "project",
    "autoload":{
        "files":[
            "lib/functions/all.php"
        ],
        "psr-4": {
            "Classes\\": "lib/classes",
            "Interfaces\\": "lib/interfaces",
            "Traits\\": "lib/traits",
            "Controllers\\": "controllers",
            "Models\\": "models",
            "Middlewares\\": "middlewares",
            "Providers\\": "providers",
            "Events\\": "events",
            "Crons\\": "queues/crons",
            "Jobs\\": "queues/jobs",
            "Workers\\": "queues/workers",
            "Roles\\": "auth/roles"
        }
    },
    "require": {
        "php": "^8.0",
        "vlucas/phpdotenv": "^5.4",
        "aws/aws-sdk-php": "^3.211",
        "firebase/php-jwt": "^6.1",
        "sendgrid/sendgrid": "~7",
        "twilio/sdk": "^6.36",
        "composer/ca-bundle": "^1.3",
        "predis/predis": "^2.0",
        "sentry/sdk": "^3.2",
        "robmorgan/phinx": "^0.13.4",
        "fzaninotto/faker": "^1.5",
        "pda/pheanstalk": "^4.0",
        "ramsey/uuid": "^4.7",
        "symfony/process": "^6.0",
        "phpseclib/phpseclib": "^3.0" 
    },
    "require-dev": {
        "robmorgan/phinx": "^0.13.4"
    },
    "license": "Property",
    "minimum-stability": "alpha",
    "scripts": {
        "v-worker-update": "vagrant ssh -c 'sudo cp -r /var/www/html/scripts/supervisor/*.conf /etc/supervisor/conf.d/'",
        "v-worker-start": "vagrant ssh -c 'sudo supervisorctl start all'",
        "v-worker-stop": "vagrant ssh -c 'sudo supervisorctl stop all'",
        "v-worker-status": "vagrant ssh -c 'sudo supervisorctl status'",
        "v-worker-refresh": "vagrant ssh -c 'sudo supervisorctl stop all && sudo supervisorctl reread && sudo supervisorctl update && sudo supervisorctl start all'",
        
        "worker-update": "sudo cp -r /var/www/html/scripts/supervisor/*.conf /etc/supervisor/conf.d/",
        "worker-start": "sudo supervisorctl start all",
        "worker-stop": "sudo supervisorctl stop all",
        "worker-status": "sudo supervisorctl status",
        "worker-refresh": [
            "@worker-stop", 
            "sudo supervisorctl reread", 
            "sudo supervisorctl update", 
            "@worker-start"]
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
